Write-Host "You must type your address within 120 seconds to use this computer."
$Read = Read-Host

if ($read -match "1014") {$StreetNumber = $True; $Score++}
if ($read -match "Francis Ave") {$StreetName = $True; $Score++}
if ($read -match "Halethorpe") {$City = $True; $Score++}
if (($read -match "Maryland") -or ($read -match "MD")) {$State = $True; $Score++}
if ($read -match "21227") {$Zip = $True; $Score++}

Write-Host "You entered $($read)"
Write-Host ""

$Msg = "Street Number"
if ($StreetNumber) {
    Write-host "    $($Msg) is:   CORRECT" -foregroundcolor green
} else {
    Write-host "    $($Msg) is:   MISSING OR INCORRECT" -foregroundcolor Red
}

$Msg = "Street Name"
if ($StreetName) {
    Write-host "    $($Msg) is:   CORRECT" -foregroundcolor green
} else {
    Write-host "    $($Msg) is:   MISSING OR INCORRECT" -foregroundcolor Red
}

$Msg = "City"
if ($City) {
    Write-host "    $($Msg) is:   CORRECT" -foregroundcolor green
} else {
    Write-host "    $($Msg) is:   MISSING OR INCORRECT" -foregroundcolor Red
}

$Msg = "State"
if ($State) {
    Write-host "    $($Msg) is:   CORRECT" -foregroundcolor green
} else {
    Write-host "    $($Msg) is:   MISSING OR INCORRECT" -foregroundcolor Red
}

$Msg = "Zip Code"
if ($Zip) {
    Write-host "    $($Msg) is:   CORRECT" -foregroundcolor green
} else {
    Write-host "    $($Msg) is:   MISSING OR INCORRECT" -foregroundcolor Red
}

Write-Host ""
if ($Score -eq 5) {
    Write-Host "You scored $($Score) out of 5" -foregroundcolor green
} elseif ($Score -lt 3) {
    Write-Host "You scored $($Score) out of 5" -foregroundcolor red
} else {
    Write-Host "You scored $($Score) out of 5" -foregroundcolor yellow
}
